                                <td th:text="'$' + ${producto.precio}">$0.00</td>
                                <td>
                                    <span class="px-2 py-1 rounded text-sm"
                                          th:classappend="${producto.stock > 10 ? 'bg-green-100 text-green-800' : producto.stock > 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800'}"
                                          th:text="${producto.stock}">0</span>
                                </td>
                                <td>
                                    <span class="px-2 py-1 rounded text-sm"
                                          th:classappend="${producto.stock > 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}"
                                          th:text="${producto.stock > 0 ? 'Disponible' : 'Agotado'}">Estado</span>
                                </td>
                                <td>
                                    <div class="flex gap-2">
                                        <button th:onclick="'editProduct(' + ${producto.id} + ')'" class="btn btn-outline btn-sm">
                                            <i class="fa-solid fa-pen-to-square icon"></i>
                                        </button>
                                        <button th:onclick="'deleteProduct(' + ${producto.id} + ')'" class="btn btn-outline btn-sm" style="color: #dc2626;">
